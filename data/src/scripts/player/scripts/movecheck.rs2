[walktrigger,stunned]
if (map_clock < %stunned) {
    mes("You're stunned!");
    p_walk(coord);
    walktrigger(stunned);
}


[walktrigger,combat_lock]
if (map_clock < add(%combatstart, 12)) {
    mes("You must wait 7 seconds before you can exit combat!");
    p_stopaction;
    walktrigger(combat_lock);
}
